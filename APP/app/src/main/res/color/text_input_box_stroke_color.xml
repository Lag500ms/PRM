<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:color="#6C4BFF" android:state_focused="true" />
    <!-- Hovered state -->
    <item android:color="#999999" android:state_hovered="true" />
    <!-- Error state -->
    <item android:color="#FF0000" android:state_enabled="false" />
    <!-- Default state (unfocused) -->
    <item android:color="#FFFFFF" />
</selector>

